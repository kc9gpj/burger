<header>
<img src="https://i.imgur.com/zL3wr7z.png" id="pic">
<div>Eat-Da-Burger</div>
</header>

<div class="grid-container">
<div class="grid-item" id="first">
<p>Burgers Left to Devour:</p>
<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
    <ul>
        {{this.name}}
        <form action="/{{this.id}}?_method=PUT" method="POST">
		<input type="hidden" name="devoured" value="true">
		<button id="buttonStyle" type="submit">Devour!</button>
		</form>
        </ul>
    {{/unless}}
  {{/each}}
</ul>
</div>

<div class="grid-item" id="second">
<p>Add a Burger</p>
<form class="create-form" action="/" method="POST">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">

  <button id="buttonStyle" type="submit">Add Burger</button>
</form>
</div>
</div>

<div class="grid-item" id="third">
<p>Devoured Burgers:</p>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
    <ul>
        {{this.name}}
    </ul>
    {{/if}}
  {{/each}}
</ul>
</div>

</div>